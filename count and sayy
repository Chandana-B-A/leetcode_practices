class Solution {
    public String countAndSay(int n) {
        if(n == 1)
            return "1";
        String prev = countAndSay(n - 1);
        StringBuilder sb = new StringBuilder();
        char c = prev.charAt(0);
        int cnt = 1;
        for(int i = 1; i < prev.length(); i++) {
            if(prev.charAt(i) == c)
                cnt++;
            else {
                sb.append(cnt);
                sb.append(c);
                c = prev.charAt(i);
                cnt = 1;
            }
        }
        sb.append(cnt);
        sb.append(c);
        return sb.toString();
    }
}
